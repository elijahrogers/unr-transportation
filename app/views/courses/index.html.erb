<%= content_tag(:div, nil, id: 'map_data', data: {zones: @zones}) %>
<%= render 'layouts/nav_menu', links: [{ text: 'Home', path: 'users_main_path(@user)' }, { text: 'Logout', path: 'users_logout_path' }], home: 'edit_user_path(@user)' %>
<% flash.each do |key, value| %>
  <%= content_tag :div, class: "flash #{key}" do %>
    <%= value %>
    <i class="fa fa-times" aria-hidden="true"></i>
  <% end %>
<% end %>
<p id='instructions'>Your Courses:</p>
<br />
<div id='course-list'>
  <% if !@courses.empty? %>
    <table>
      <tr>
        <th>Course Name</th>
        <th>Building</th>
        <th colspan="2">Actions</th>
      </tr>
    <% @courses.each do |course| %>
      <tr>
        <td> <%= truncate course.name, length: 20 %> </td>
        <td> <%= truncate Building.find(course.building_id).name, length: 25 %> </td>
        <td> <%= button_to 'Edit', edit_user_course_path(@user, course), method: :get, class: "button_to"  %> </td>
        <td> <%= button_to 'Delete', user_course_path(@user, course), method: :delete, class: "button_to" %> </td>
      </tr>
    <% end %>
    </table>
  <% end %>
</div>
<%= button_to 'Add Course', new_user_course_path, method: :get, class: "button_to"  %>

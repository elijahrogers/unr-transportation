<% content_for :nav_menu do %>
  <%= render 'layouts/nav_menu', links: [{ text: 'Home', path: 'users_main_path(@user)' }, { text: 'Logout', path: 'users_logout_path' }], home: 'edit_user_path(@user)' %>
<% end %>
<p id='instructions'>Add your course:</p>
<br />
<div id='course-form'>
  <%= form_for [@user, @course] do |f| %>
    <%= f.label :name, 'Name', class: 'label' %>
    <%= f.text_field :name %>
    <br />
    <%= f.label :building_id, 'Building', class: 'label' %>
    <%= f.select :building_id, options_from_collection_for_select(Building.all, 'id', 'name') %>
    <br /><br />
    <%= f.submit 'Add Course' %>
  <% end %>
</div>

<%= render 'layouts/nav_menu', links: [{ text: 'Home', path: 'users_main_path(@user)' }, { text: 'Logout', path: 'users_logout_path' }] %>
<br />
<p id='instructions'>Add your course:</p>
<% if flash[:notice] %>
  <div class='notice'>
    <%= flash[:notice] %>
  </div>
<% end %>
<br />
<div id='course-form'>
  <%= form_for [@user, @course] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br />
    <%= f.label :building_id %>
    <%= f.select :building_id, options_from_collection_for_select(Building.all, 'id', 'name') %>
    <br /><br />
    <%= f.submit 'Add Course' %>
  <% end %>
</div>

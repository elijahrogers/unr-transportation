<!DOCTYPE html>
<html>
<head>
  <title>UNR Transportation</title>
  <link href="https://fonts.googleapis.com/css?family=Lato|Open+Sans+Condensed:300,700" rel="stylesheet">
  <%= csrf_meta_tags %>
  <script src="https://use.fontawesome.com/db425ab257.js"></script>
  <%= javascript_include_tag 'application' %>
  <%= stylesheet_link_tag 'users', media: 'all' %>
</head>
<body>
  <div id="content">
      <div id="map"></div>
      <div id='nav'>
        <h1>UNR Transportation</h1>
        <% if content_for?(:nav_menu) %>
          <%= yield :nav_menu %>
        <% else %>
          <%= render 'layouts/nav_menu', links: [{ text: 'Login', path: 'users_login_path' }, { text: 'Sign Up', path: 'new_user_path'}], home: 'root_url' %>
        <% end %>
        <br />
        <% flash.each do |key, value| %>
          <%= content_tag :div, class: "flash #{key}" do %>
            <%= value %>
            <i class="fa fa-times" aria-hidden="true"></i>
          <% end %>
        <% end %>
        <%= yield %>
      </div>
    </div>
</body>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA6r93D1mHhWyaRh79vaTficpo47cnayLk&callback=initMap" ></script>
  <%= javascript_include_tag 'users' %>
</html>
